<script>
    $(document).ready(function () {
        $("#orderdata").click(function () {
            var id = $("#orderdata").data("value");
            $.ajax({
                url: '/Home/OrderList/',
                type: 'POST',
                data: { 'id': id },
                dataType: "json",
                success: function (data) {
                    console.log(data);
                    var row = $('<tr>');
                    $.each(data, function (i) {
                        row.append($('<td>').html(data[i]));
                    });
                    $('#results').append(row);
                },
                error: function () {
                    alert("Error occured!!")
                }
            });
        })
    })
</script>